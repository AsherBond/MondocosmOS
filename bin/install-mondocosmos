#!/bin/bash
# Asher Bond 2011

export MONDOPATH=/var/lib/MondocosmOS

echo "MONDOPATH: $MONDOPATH"

# add $MONDOPATH to $PATH if it's not already there
if !(`echo "$PATH" | grep -q "$MONDOPATH"`) ; then
        export PATH=$PATH:$MONDOPATH/bin
fi


echo "PATH: $PATH"


#apt-get update && apt-get -y upgrade
#apt-get install git

# default dir
DIR='/var/lib'


cd $DIR
git clone git://github.com/AsherBond/MondocosmOS.git MondocosmOS
cd MondocosmOS
git pull
cd $DIR/MondocosmOS/bin
./configure-mondopath

cd ..
./install-it-all $MONDOPATH

cd $DIR
git clone git://github.com/AsherBond/MondocosmOS-Images.git
cd MondocosmOS-Images
git pull
#./install-it-all
