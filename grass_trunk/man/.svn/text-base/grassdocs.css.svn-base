BODY{	background: white;
	color: black;
	font-family: arial,sans-serif;
}

H1{	background-color: transparent;
	color: rgb(25%, 60%, 25%);
	font-family: arial,sans-serif;
	font-weight: bold;
	font-size: x-large;
}

H2{	background-color: transparent;
	color: rgb(25%, 60%, 25%);
	font-family: arial,sans-serif;
	font-weight: bold;
	font-size: large;
}

H3{     background-color: transparent;
	color: rgb(25%, 60%, 25%);
	font-family: arial,sans-serif;
	font-weight: bold;
	font-size: large;
}

H4{	background-color: transparent;
