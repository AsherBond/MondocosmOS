<?xml version="1.0" encoding="UTF-8"?>
<project name="wonderland-cellselection-module" default="all" basedir=".">
    <!-- current directory needed in all scripts -->
    <dirname property="current.dir" file="${ant.file.wonderland-cellselection-module}"/>
    <property name="modules.dir" location="${current.dir}/../.."/>
        
    <property name="module.src" value="org/jdesktop/wonderland/modules/cellselection"/>
    <property name="module.packagename" value="org.jdesktop.wonderland.modules.cellselection"/>
    <property name="module.jarname" value="cellselection-module"/>
    
    <!-- import common build file -->
    <import file="${modules.dir}/build-tools/build-scripts/module-build.xml"/>

    <target name="build" depends="-module-init, -module-compile-common,
                                                -module-compile-server,
                                                -module-compile-client">
     <!-- copy resource bundles -->
        <copy todir="${build.classes.dir}/${module.src}/client/resources">
            <fileset dir="${current.dir}/src/classes/${module.src}/client/resources"/>
        </copy>
    </target>
    
    <target name="dist" depends="build">
        <mkdir dir="${module.dist.dir}"/>
        
        <module name="cellselection" majorVersion="0" minorVersion="5" jarfile="${module.dist.dir}/${module.jarname}.jar"
                moduleDescription="Cell creation library" builddir="${build.dir}">

            <client>
                <clientjar name="cellselection-client" basedir="${build.classes.dir}">
                    <include name="${module.src}/client/**"/>
                </clientjar>
            </client>
        </module>
    </target>
             
    <target name="deploy" depends="dist, -module-deploy"/>
    <target name="clean" depends="-module-clean"/>
</project>
