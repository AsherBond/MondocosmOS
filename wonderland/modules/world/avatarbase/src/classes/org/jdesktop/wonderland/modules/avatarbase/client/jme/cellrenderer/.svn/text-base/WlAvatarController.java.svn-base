package org.jdesktop.wonderland.modules.avatarbase.client.jme.cellrenderer;

import imi.character.avatar.Avatar;
import imi.character.avatar.AvatarController;

/**
 * Extension avatar controller that exposes the setHeight() and
 * setCollision() methods for remote avatars
 * @author Jonathan Kaplan <jonathankap@gmail.com>
 */
public class WlAvatarController extends AvatarController {
    public WlAvatarController(Avatar avatar) {
        super (avatar);
    }

    @Override
    public void setColliding(boolean colliding) {
        super.setColliding(colliding);
    }

    @Override
    public void setHeight(float height) {
        super.setHeight(height);
    }
}
